<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>


<BorderPane minWidth="300.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
        <items>
            <Button mnemonicParsing="false" onAction="#increaseFloor" text="Étage Superieur (+)" />
          <Button mnemonicParsing="false" onAction="#decreaseFloor" text="Étage Inferieur (-)" />
        </items>
      </ToolBar>
   </top>
   <center>
      <Pane fx:id="imagePanel" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="displayedImage" pickOnBounds="true" preserveRatio="true" />
         </children>
      </Pane>
   </center>
</BorderPane>
